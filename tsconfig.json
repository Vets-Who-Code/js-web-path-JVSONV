{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "./src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "baseUrl": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "declaration": true,
  }
}
