{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "jsxImportSource": "preact",
    "module": "commonjs",
    "rootDir": "./src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
