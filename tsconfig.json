{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "jsxImportSource": "preact",
    "module": "commonjs",
    "rootDir": "./src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2017"],
    "watch": true,
  }
}
